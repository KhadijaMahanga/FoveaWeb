
@{
    ViewBag.Title = "Subscribe";
}

<div class="row">
    <div class="col-sm-4">
        <h3>Subscribe</h3>
        <form data-bind="submit: subscribe">
            <div class="form-group">
                <label>Full Name</label>
                <input class="form-control" type="text" data-bind="value: subscriberName" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input class="form-control" type="text" data-bind="value: subscriberEmail" />
            </div>
            <div class="form-group">
                <label>Subscription Period</label>
                <select name="subscriptionId" class="dropdown">
                    <option selected="selected" value="1">3 months subscription $30</option>
                    <option value="2">6 months subscription $50</option>
                    <option value="3">12 months subscription $80</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </form>
    </div>

</div>

